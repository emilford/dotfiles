{
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "coc.preferences.formatOnType": true,
  "diagnostic.errorSign": "•",
  "diagnostic.hintSign": "•",
  "diagnostic.infoSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic-languageserver.filetypes": {
    "eruby": "erblint",
    "ruby": "standardrb"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "eruby": "erblint",
    "ruby": "standardrb"
  },
  "diagnostic-languageserver.formatters": {
    "erblint": {
      "command": "bundle",
      "args": [
        "exec",
        "erblint",
        "--autocorrect",
        "%filepath"
      ],
      "isStdout": false,
      "rootPatterns": [
        ".git"
      ],
      "requiredFiles": [
        ".erb-lint.yml"
      ]
    },
    "standardrb": {
      "command": "bundle",
      "args": [
        "exec",
        "standardrb",
        "--fix",
        "--force-exclusion",
        "%filepath"
      ],
      "rootPatterns": [
        ".git"
      ],
      "requiredFiles": [
        ".standard.yml",
        "bin/standardrb"
      ]
    }
  },
  "diagnostic-languageserver.linters": {
    "erblint": {
      "command": "bundle",
      "sourceName": "erblint",
      "debounce": 100,
      "args": [
        "exec",
        "erblint",
        "--format",
        "json",
        "--stdin",
        "%filepath"
      ],
      "parseJson": {
        "errorsRoot": "files[0].offenses",
        "line": "location.start_line",
        "endLine": "location.last_line",
        "column": "location.start_column",
        "endColumn": "location.last_column",
        "message": "[${linter}] ${message}"
      },
      "rootPatterns": [
        ".git"
      ],
      "requiredFiles": [
        ".erb-lint.yml"
      ]
    },
    "standardrb": {
      "command": "bundle",
      "sourceName": "standardrb",
      "debounce": 100,
      "args": [
        "exec",
        "standardrb",
        "--format",
        "json",
        "--force-exclusion",
        "--stdin",
        "%filepath"
      ],
      "parseJson": {
        "errorsRoot": "files[0].offenses",
        "line": "location.start_line",
        "endLine": "location.last_line",
        "column": "location.start_column",
        "endColumn": "location.end_column",
        "message": "[${cop_name}] ${message}",
        "security": "severity"
      },
      "securities": {
        "fatal": "error",
        "error": "error",
        "warning": "warning",
        "convention": "info",
        "refactor": "info",
        "info": "info"
      },
      "rootPatterns": [
        ".git"
      ],
      "requiredFiles": [
        ".standard.yml",
        "bin/standardrb"
      ]
    }
  },
  "eslint.autoFixOnSave": true,
  "prettier.disableSuccessMessage": true,
  "prettier.requireConfig": true,
  "suggest.noselect": false,
  "snippets.extends": {
    "ruby": ["rails", "rspec"]
  }
}
