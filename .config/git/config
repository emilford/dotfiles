[core]
  editor = "vim"
  excludesfile = ~/.config/git/ignore
  hooksPath = ~/.config/git/hooks

  # Speed up commands involving untracked files such as `git status`.
  # https://git-scm.com/docs/git-update-index#_untracked_cache
  untrackedCache = true

  # Convert CRLF (Windows) introduced to LF on commit, but not the other way
  # around. This should leave CRLF endings in Windows checkouts, but LF endings
  # on macOS and Linux systems and in the repository.
  autocrlf = input

[user]
  name = Eric Milford
  email = ericmilford@gmail.com

[github]
  user = emilford

[color]
  ui = true

[alias]
  l = log --oneline --decorate --graph
  conflicts = "!$EDITOR $(git diff --name-only --diff-filter=U)"
  conflicted = "!vim +Conflicted"
  contrast = log --cherry-pick --oneline --left-only

[push]
  default = upstream

[web]
  browser = open

[fetch]
  prune = true
  pruneTags = true

[commit]
  template = ~/.config/git/message

[diff]
	compactionHeuristic = true
  colorMoved = zebra
[rebase]
	autosquash = true
[pull]
	ff = only
[credential]
	helper = osxkeychain
[init]
	defaultBranch = main
