snippet def "def <name>..."
def ${1:function_name}${2:(${3:*args})}
	$0
end
endsnippet

snippet defi "def initialize ..."
def initialize${1:(${2:*args})}
	$0
end
endsnippet

snippet if "if <condition> ... end"
if ${1:condition}
	$2
end
endsnippet

snippet ife "if <condition> ... else ... end"
if ${1:condition}
	$2
else
	$3
end
endsnippet
